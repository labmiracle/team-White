{
    "name": "paradigm-api",
    "version": "1.0.0",
    "description": "Paradigm API.",
    "main": "index.js",
    "scripts": {
        "dev": "npm install && npm run build:typescript && npm-run-all --parallel watch:typescript start:server",
        "start": "node ./dist/app.js",
        "start:server": "nodemon ./dist/app.js",
        "test": "jest ./tests/",
        "coverage": "jest ./tests/ --coverage",
        "watch:test": "jest ./tests/ --watch",
        "watch:coverage": "jest ./tests/ --coverage --watch",
        "watch:typescript": "tsc --project ./src --incremental --watch",
        "build": "npm install && npm run build:doc && npm run build:typescript",
        "build:typescript": "tsc --project ./src",
        "build:doc": "swaggerGen -c swagger.config.json",
        "build:azure": "npm install && npm run build:doc && npm run azure:tsc && npm run copy:all && npm run azure:install",
        "azure:tsc": "tsc --build ./tsconfig.azure.json",
        "azure:install": "cd ./dist && npm i",
        "copy:configuration": "cp -f configuration.json ./dist/",
        "copy:package": "cp -f package-azure.json ./dist/package.json",
        "copy:all": "npm run copy:configuration && npm run copy:package",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,scss,html}\"",
        "fix": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx,scss,html}\"",
        "tsc": "tsc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MiracleDevs/Paradigm.Express.WebApi.Bootstrap.git"
    },
    "author": "Miracle Devs",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/MiracleDevs/Paradigm.Express.WebApi.Bootstrap/issues"
    },
    "homepage": "https://github.com/MiracleDevs/Paradigm.Express.WebApi.Bootstrap#readme",
    "dependencies": {
        "@miracledevs/paradigm-express-webapi": "^1.2.0",
        "@miracledevs/paradigm-web-di": "^1.0.3",
        "@miracledevs/paradigm-web-fetch": "^1.0.3",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^2.3.3",
        "nodemon": "^2.0.19",
        "npm-run-all": "^4.1.5",
        "reflect-metadata": "^0.1.13",
        "swagger-ui-express": "^4.5.0",
        "typescript-rest": "^3.0.4",
        "validator": "^13.11.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^28.1.6",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/node": "^18.6.1",
        "@types/node-fetch": "^2.6.2",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/validator": "^13.11.2",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "eslint": "^8.20.0",
        "jest": "^28.1.3",
        "prettier": "^2.7.1",
        "ts-jest": "^28.0.7",
        "typescript": "^4.7.4",
        "typescript-rest-swagger": "^1.1.7"
    }
}
